<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alexispounne.projectplatypusii.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dayum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/bootstrap_h5_text_size"
                android:text="@string/lorem"/>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/bsbutt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                app:bootstrapText="{fa_android} Android really sucks!"
                />

            <com.beardedhen.androidbootstrap.BootstrapButtonGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:bootstrapBrand="warning"
                app:showOutline="true"
                app:bootstrapSize="lg">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bold"
                    />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Italics"
                    />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Underline"
                    />
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Undo"
                    />
            </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

            <MultiAutoCompleteTextView
                android:text="MultiAutoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/multiAutoCompleteTextView"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <com.beardedhen.androidbootstrap.BootstrapProgressBarGroup
                android:id="@+id/example_progress_bar_group_round_group"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bootstrap_progress_bar_height"
                app:bootstrapMaxProgress="100">

                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bootstrapBrand="secondary"
                    app:striped="true"
                    app:animated="true"
                    app:bootstrapProgress="20"
                    />

                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:id="@+id/middleBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bootstrapBrand="warning"
                    app:striped="true"
                    app:animated="true"
                    app:bootstrapProgress="40"
                    />

                <com.beardedhen.androidbootstrap.BootstrapProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bootstrapBrand="primary"
                    app:striped="true"
                    app:animated="true"
                    app:bootstrapProgress="15"
                    />

            </com.beardedhen.androidbootstrap.BootstrapProgressBarGroup>
        </LinearLayout>
    </ScrollView>

    <!--app:badgeText="Wow! It works!"-->

</LinearLayout>
